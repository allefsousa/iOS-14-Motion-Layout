<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:motionInterpolator="easeInOut"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2000">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="0"
                motion:motionTarget="@id/phone"
                android:scaleX="0.2"
                android:scaleY="0.2"
                android:alpha="0.0"
                />
            <KeyAttribute
                motion:framePosition="50"
                motion:motionTarget="@id/phone"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:alpha="0.5"
                />
            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@id/phone"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:alpha="1.0"
                />
        </KeyFrameSet>
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="0"
                motion:motionTarget="@id/front"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:alpha="1.0"
                />
            <KeyAttribute
                motion:framePosition="50"
                motion:motionTarget="@id/front"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:alpha="0.5"
                />
            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@id/front"
                android:scaleX="0.2"
                android:scaleY="0.2"
                android:alpha="0.0"
                />
        </KeyFrameSet>

        <OnClick motion:targetId="@+id/front" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/front"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/phone"
            android:alpha="0.0"
            motion:layout_constraintStart_toEndOf="@+id/front"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/front"
            android:alpha="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/phone"
            motion:layout_constraintStart_toEndOf="@+id/front"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
    </ConstraintSet>
</MotionScene>