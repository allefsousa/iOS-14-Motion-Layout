<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1500">
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="2.0"
                android:scaleY="2.0"
                motion:framePosition="50"
                motion:motionTarget="@id/phone" />
            <KeyAttribute
                android:scaleX="1.0"
                android:scaleY="1.0"
                motion:framePosition="100"
                motion:motionTarget="@id/phone" />
        </KeyFrameSet>
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1.0"
                android:scaleX="1.0"
                android:scaleY="1.0"
                motion:framePosition="0"
                motion:motionTarget="@id/front" />
            <KeyAttribute
                android:alpha="0.5"
                android:scaleX="0.5"
                android:scaleY="0.5"
                motion:framePosition="50"
                motion:motionTarget="@id/front" />
            <KeyAttribute
                android:alpha="0.0"
                android:scaleX="0.2"
                android:scaleY="0.2"
                motion:framePosition="70"
                motion:motionTarget="@id/front" />
        </KeyFrameSet>
        <OnClick motion:targetId="@+id/front" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/front"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ios_logo"
            android:translationZ="1dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.48" />

        <Constraint
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:src="@drawable/iphonexr"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:alpha="0.0"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_camera"
            android:translationZ="1dp"
             />

        <Constraint
            android:id="@+id/stocks"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.0"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:src="@drawable/ic_stocks"
            android:translationZ="1dp"
            />

        <Constraint
            android:id="@+id/clock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.0"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:src="@drawable/ic_clock"
            android:translationZ="1dp"
             />

        <Constraint
            android:id="@+id/tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:alpha="0.0"
            android:padding="4dp"
            android:src="@drawable/ic_tv"
            android:translationZ="1dp"
           />

        <Constraint
            android:id="@+id/widget_fitness"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.0"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            android:src="@drawable/ic_activity"
            android:translationZ="1dp" />

        <Constraint
            android:id="@+id/guide_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:orientation="vertical"
            motion:layout_constraintGuide_percent="0.2" />

        <Constraint
            android:id="@+id/guide_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:orientation="vertical"
            motion:layout_constraintGuide_percent="0.8" />

        <Constraint
            android:id="@+id/guide_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:orientation="horizontal"
            motion:layout_constraintGuide_percent="0.15" />

        <Constraint
            android:id="@+id/guide_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:orientation="horizontal"
            motion:layout_constraintGuide_end="90dp" />

        <Constraint
            android:id="@+id/guide_meio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:orientation="vertical"
            motion:layout_constraintGuide_percent="0.5" />

        <Constraint
            android:id="@+id/barrier_end_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            motion:barrierDirection="bottom"
            motion:constraint_referenced_ids="widget_fitness" />

        <Constraint
            android:id="@+id/widget_stocks"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:alpha="0.0"
            android:padding="1dp"
            android:src="@drawable/ic_stocks"
            android:translationZ="1dp" />

        <Constraint
            android:id="@+id/barrier_end_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            motion:barrierDirection="bottom"
            motion:constraint_referenced_ids="widget_stocks" />


        <Constraint
            android:id="@+id/file"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:alpha="0.0"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_files"
            android:translationZ="1dp" />

        <Constraint
            android:id="@+id/store"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:alpha="0.0"
            android:src="@drawable/ic_app_store"
            android:translationZ="1dp" />

        <Constraint
            android:id="@+id/mail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:alpha="0.0"
            android:padding="4dp"
            android:src="@drawable/ic_mail"
            android:translationZ="1dp" />

        <Constraint
            android:id="@+id/clima"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:alpha="0.0"
            android:padding="4dp"
            android:src="@drawable/ic_weather"
            android:translationZ="1dp" />

        <Constraint
            android:id="@+id/widget_music"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:alpha="0.0"
            android:padding="1dp"
            android:src="@drawable/ic_music"
            android:translationZ="1dp" />

        <Constraint
            android:id="@+id/barrier_end_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:constraint_referenced_ids="widget_music"
            motion:barrierDirection="bottom" />

        <Constraint
            android:id="@+id/saude"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:alpha="0.0"
            android:padding="4dp"
            android:src="@drawable/ic_health"
            android:translationZ="1dp"
            />

        <Constraint
            android:id="@+id/house"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:alpha="0.0"
            android:padding="4dp"
            android:src="@drawable/ic_house"
            android:translationZ="1dp"
            />

        <Constraint
            android:id="@+id/podcast"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.0"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_podcasts"
            android:translationZ="1dp"
            />

        <Constraint
            android:id="@+id/photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.0"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_photos"
            android:translationZ="1dp"
            />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/front"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:alpha="0.0"
            android:src="@drawable/ios_logo"
            android:translationZ="1dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.48" />

        <Constraint
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:src="@drawable/iphonexr"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.0" />

        <Constraint
            android:id="@+id/camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_camera"
            android:translationZ="1dp"
            motion:layout_constraintEnd_toStartOf="@+id/guide_meio"
            motion:layout_constraintStart_toEndOf="@+id/clock"
            motion:layout_constraintTop_toBottomOf="@id/guide_top" />

        <Constraint
            android:id="@+id/stocks"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:src="@drawable/ic_stocks"
            android:translationZ="1dp"
            motion:layout_constraintBottom_toTopOf="@+id/barrier_end_one"
            motion:layout_constraintEnd_toStartOf="@+id/guide_meio"
            motion:layout_constraintStart_toEndOf="@+id/tv"
            motion:layout_constraintTop_toBottomOf="@+id/camera" />

        <Constraint
            android:id="@+id/clock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:src="@drawable/ic_clock"
            android:translationZ="1dp"
            motion:layout_constraintBottom_toTopOf="@+id/tv"
            motion:layout_constraintEnd_toStartOf="@+id/camera"
            motion:layout_constraintStart_toEndOf="@id/guide_start"
            motion:layout_constraintTop_toBottomOf="@+id/guide_top" />

        <Constraint
            android:id="@+id/tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:src="@drawable/ic_tv"
            android:translationZ="1dp"
            motion:layout_constraintBottom_toTopOf="@+id/barrier_end_one"
            motion:layout_constraintEnd_toStartOf="@+id/stocks"
            motion:layout_constraintStart_toEndOf="@id/guide_start"
            motion:layout_constraintTop_toBottomOf="@+id/clock" />

        <Constraint
            android:id="@+id/widget_fitness"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:padding="1dp"
            android:src="@drawable/ic_activity"
            android:translationZ="1dp"
            motion:layout_constraintBottom_toTopOf="@+id/barrier_end_one"
            motion:layout_constraintEnd_toStartOf="@id/guide_end"
            motion:layout_constraintStart_toEndOf="@+id/guide_meio"
            motion:layout_constraintTop_toBottomOf="@+id/guide_top" />

        <Constraint
            android:id="@+id/guide_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            motion:layout_constraintGuide_percent="0.2" />

        <Constraint
            android:id="@+id/guide_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            motion:layout_constraintGuide_percent="0.8" />

        <Constraint
            android:id="@+id/guide_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            motion:layout_constraintGuide_percent="0.15" />

        <Constraint
            android:id="@+id/guide_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            motion:layout_constraintGuide_end="90dp" />

        <Constraint
            android:id="@+id/guide_meio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            motion:layout_constraintGuide_percent="0.5" />

        <Constraint
            android:id="@+id/barrier_end_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:barrierDirection="bottom"
            motion:constraint_referenced_ids="widget_fitness" />

        <Constraint
            android:id="@+id/widget_stocks"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:padding="1dp"
            android:src="@drawable/ic_stocks"
            android:translationZ="1dp"
            motion:layout_constraintBottom_toTopOf="@+id/barrier_end_two"
            motion:layout_constraintEnd_toStartOf="@id/guide_meio"
            motion:layout_constraintStart_toEndOf="@id/guide_start"
            motion:layout_constraintTop_toBottomOf="@+id/barrier_end_one" />

        <Constraint
            android:id="@+id/barrier_end_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:barrierDirection="bottom"
            motion:constraint_referenced_ids="widget_stocks" />


        <Constraint
            android:id="@+id/file"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_files"
            android:translationZ="1dp"
            motion:layout_constraintBottom_toTopOf="@+id/clima"
            motion:layout_constraintEnd_toStartOf="@id/guide_end"
            motion:layout_constraintStart_toEndOf="@+id/mail"
            motion:layout_constraintTop_toBottomOf="@id/barrier_end_one" />

        <Constraint
            android:id="@+id/store"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_app_store"
            android:translationZ="1dp"
            motion:layout_constraintBottom_toTopOf="@id/barrier_end_two"
            motion:layout_constraintEnd_toStartOf="@+id/clima"
            motion:layout_constraintStart_toEndOf="@id/guide_meio"
            motion:layout_constraintTop_toBottomOf="@+id/mail" />

        <Constraint
            android:id="@+id/mail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_mail"
            android:translationZ="1dp"
            motion:layout_constraintBottom_toTopOf="@+id/store"
            motion:layout_constraintEnd_toStartOf="@+id/file"
            motion:layout_constraintStart_toEndOf="@+id/guide_meio"
            motion:layout_constraintTop_toBottomOf="@+id/barrier_end_one" />

        <Constraint
            android:id="@+id/clima"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:src="@drawable/ic_weather"
            android:translationZ="1dp"
            motion:layout_constraintBottom_toTopOf="@+id/barrier_end_two"
            motion:layout_constraintEnd_toStartOf="@+id/guide_end"
            motion:layout_constraintStart_toEndOf="@+id/store"
            motion:layout_constraintTop_toBottomOf="@+id/file" />

        <Constraint
            android:id="@+id/widget_music"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:padding="1dp"
            android:src="@drawable/ic_music"
            android:translationZ="1dp"
            motion:layout_constraintBottom_toTopOf="@+id/barrier_end_three"
            motion:layout_constraintEnd_toStartOf="@id/guide_end"
            motion:layout_constraintStart_toEndOf="@id/guide_meio"
            motion:layout_constraintTop_toBottomOf="@+id/barrier_end_two" />

        <Constraint
            android:id="@+id/barrier_end_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:constraint_referenced_ids="widget_music"
            motion:barrierDirection="bottom" />

        <Constraint
            android:id="@+id/saude"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            motion:layout_constraintBottom_toTopOf="@+id/podcast"
            motion:layout_constraintEnd_toStartOf="@+id/house"
            motion:layout_constraintTop_toBottomOf="@+id/barrier_end_two"
            motion:layout_constraintStart_toEndOf="@id/guide_start"
            android:src="@drawable/ic_health"
            android:translationZ="1dp"
            />

        <Constraint
            android:id="@+id/house"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            motion:layout_constraintBottom_toTopOf="@+id/photo"
            motion:layout_constraintTop_toBottomOf="@+id/barrier_end_two"
            motion:layout_constraintStart_toEndOf="@+id/saude"
            motion:layout_constraintEnd_toStartOf="@+id/guide_meio"
            android:src="@drawable/ic_house"
            android:translationZ="1dp"
            />

        <Constraint
            android:id="@+id/podcast"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            motion:layout_constraintEnd_toStartOf="@+id/photo"
            motion:layout_constraintStart_toEndOf="@id/guide_start"
            motion:layout_constraintTop_toBottomOf="@+id/saude"
            motion:layout_constraintBottom_toTopOf="@+id/barrier_end_three"
            android:src="@drawable/ic_podcasts"
            android:translationZ="1dp"
            />

        <Constraint
            android:id="@+id/photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_photos"
            motion:layout_constraintBottom_toTopOf="@+id/barrier_end_three"
            motion:layout_constraintStart_toEndOf="@+id/podcast"
            motion:layout_constraintEnd_toStartOf="@id/guide_meio"
            motion:layout_constraintTop_toBottomOf="@+id/house"
            android:translationZ="1dp"
            />


    </ConstraintSet>
</MotionScene>